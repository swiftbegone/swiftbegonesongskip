{
  "name": "swiftbegone",
  "version": "1.0.0",
  "description": "Automatically skip artists you never want to hear again",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [
    "music",
    "spotify",
    "apple-music",
    "skip",
    "blocklist"
  ],
  "author": "SwiftBeGone",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "to-ico": "^1.1.5"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "express": "^4.18.2"
  },
  "build": {
    "appId": "com.swiftbegone.app",
    "productName": "SwiftBeGone",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/iconTemplate.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
